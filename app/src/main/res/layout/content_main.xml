<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="chrisfodor.com.bodyfatpercentagecalculator.MainActivity"
    tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Your weight ex. 123.4"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/heightTextView"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/heightTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/weightEditText" />

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-1dp"
        android:text="Height"
        android:textSize="44sp"
        app:layout_constraintRight_toRightOf="@+id/weightTextView"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/weightTextView" />

    <TextView
        android:id="@+id/bfpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="44sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bfpTextView"
        android:layout_marginLeft="80dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="44sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ageTextView"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/ageTextView" />

    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/ageTextView"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bfpTextView"
        app:layout_constraintLeft_toRightOf="@+id/ageTextView"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Your weight ex. 123.4"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/weightTextView"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ageEditText"
        app:layout_constraintLeft_toRightOf="@+id/weightTextView"
        android:layout_marginLeft="20dp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/heightEditText" />

</android.support.constraint.ConstraintLayout>
